#!/usr/bin/env ruby
$:.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'rubygems'
require 'configliere'
require 'genomer'
require 'ronn'

Settings.use :commandline
Settings.resolve!

begin
  STDOUT.puts Genomer::Runtime.new(Settings).execute!
  exit true
rescue Genomer::Error => e
  STDERR.puts "Error. #{e.message}"
  exit false
end
